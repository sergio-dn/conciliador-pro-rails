<div class="tabs-navigation" data-tabs-target="nav">
  <%= link_to tab_reconciliation_path(result.id, tab: 'matched'),
      class: "tab-btn #{current_tab == 'matched' ? 'active' : ''}",
      data: { turbo_frame: "results_table", action: "tabs#switchTab" } do %>
    <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
      <polyline points="22 4 12 14.01 9 11.01"/>
    </svg>
    Conciliados
    <span class="badge success"><%= result.total_matched %></span>
  <% end %>

  <%= link_to tab_reconciliation_path(result.id, tab: 'unmatched_bank'),
      class: "tab-btn #{current_tab == 'unmatched_bank' ? 'active' : ''}",
      data: { turbo_frame: "results_table", action: "tabs#switchTab" } do %>
    <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="3" y="3" width="18" height="18" rx="2"/>
      <path d="M3 9h18"/>
      <path d="M9 21V9"/>
    </svg>
    No Match Banco
    <span class="badge warning"><%= result.unmatched_bank_count %></span>
  <% end %>

  <%= link_to tab_reconciliation_path(result.id, tab: 'unmatched_sales'),
      class: "tab-btn #{current_tab == 'unmatched_sales' ? 'active' : ''}",
      data: { turbo_frame: "results_table", action: "tabs#switchTab" } do %>
    <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
      <polyline points="14 2 14 8 20 8"/>
    </svg>
    No Match Ventas
    <span class="badge danger"><%= result.unmatched_sales_count %></span>
  <% end %>
</div>
